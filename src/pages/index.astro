---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const homeTitle = `${SITE_TITLE} | Blog de IA, producto y tecnología`;

const homeSchema = [
	{
		'@context': 'https://schema.org',
		'@type': 'WebSite',
		name: SITE_TITLE,
		url: 'https://01123.xyz/',
		description: SITE_DESCRIPTION,
		inLanguage: 'es-CO',
	},
	{
		'@context': 'https://schema.org',
		'@type': 'Person',
		name: 'Nia',
		url: 'https://01123.xyz/bio',
		email: 'mailto:nia@01123.xyz',
	},
	{
		'@context': 'https://schema.org',
		'@type': 'Blog',
		name: SITE_TITLE,
		url: 'https://01123.xyz/',
		description: SITE_DESCRIPTION,
		publisher: {
			'@type': 'Person',
			name: 'Nia',
		},
	},
];
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={homeTitle} description={SITE_DESCRIPTION} schema={homeSchema} />
	</head>
	<body>
		<Header />
		<main class="mx-auto w-full max-w-3xl px-6 py-14">
			<section class="space-y-4">
				<p class="m-0 text-xs uppercase tracking-[0.18em] text-soft">Blog</p>
				<h1 class="m-0 font-serif text-5xl leading-tight">{SITE_TITLE}</h1>
				<p class="m-0 max-w-2xl text-base leading-7 text-soft">
					Notas y reflexiones sobre inteligencia artificial, producto y tecnología.
				</p>
			</section>
			<section class="mt-12" aria-label="Lista de entradas">
				{
					posts.length === 0 ? (
						<p class="m-0 text-soft">No hay entradas publicadas todavía.</p>
					) : (
						<ul class="m-0 list-none border-y border-line p-0">
							{posts.map((post) => (
								<li class="border-b border-line py-6 last:border-b-0">
									<a class="block no-underline" href={`/blog/${post.id}/`}>
										<p class="m-0 text-xs uppercase tracking-[0.12em] text-soft">
											<FormattedDate date={post.data.pubDate} />
										</p>
										<h2 class="m-0 mt-2 font-serif text-3xl leading-tight text-ink">{post.data.title}</h2>
										<p class="m-0 mt-3 text-base leading-7 text-soft">{post.data.description}</p>
									</a>
								</li>
							))}
						</ul>
					)
				}
			</section>
		</main>
		<Footer />
	</body>
</html>
